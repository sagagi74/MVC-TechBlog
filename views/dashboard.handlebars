<h2>Dashboard</h2>
<a href="/new-post" class="button">Create New Post</a>
{{#each posts}}
  <div class="post">
    <h3>{{this.title}}</h3>
    <p>{{this.content}}</p>
    <button class="edit-btn" data-id="{{this.id}}">Edit</button>
    <button class="delete-btn" data-id="{{this.id}}">Delete</button>
    <form class="edit-form" data-id="{{this.id}}" style="display: none;">
      <label for="edit-title-{{this.id}}">Title:</label>
      <input type="text" id="edit-title-{{this.id}}" name="title" value="{{this.title}}">
      <label for="edit-content-{{this.id}}">Content:</label>
      <textarea id="edit-content-{{this.id}}" name="content">{{this.content}}</textarea>
      <button type="submit">Update Post</button>
    </form>
  </div>
{{/each}}
<script src="/js/dashboard.js"></script>
