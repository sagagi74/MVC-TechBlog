
  <main>
    <div class="post">
      <h2>{{post.title}}</h2>
      <p>{{post.content}}</p>
      <p>Posted by {{post.user.username}} on {{format_date post.createdAt}}</p>
    </div>

    <h3>Comments</h3>
    {{#each post.comments}}
      <div class="comment">
        <p>{{this.comment_text}}</p>
        <p>Comment by {{this.user.username}} on {{format_date this.createdAt}}</p>
      </div>
    {{/each}}

    {{#if logged_in}}
      <form id="new-comment-form">
        <textarea id="comment-text" name="comment_text"></textarea>
        <button type="submit">Post Comment</button>
      </form>
      <script src="/js/comment.js"></script>
    {{else}}
      <p><a href="/login">Log in</a> to post a comment</p>
    {{/if}}
      <script src="/js/main.js"></script>
  </main>


